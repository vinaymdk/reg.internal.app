rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        // read the calling user's document in `users` collection and check role
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection: allow users to create and manage their own document.
    // Admins can read/update/delete any user document.
    match /users/{userId} {
      // Allow a signed-in user to create their own document (document id must equal auth.uid)
      allow create: if isSignedIn() && request.auth.uid == userId;

      // Allow read if the user is the owner or an admin
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());

      // Allow update/delete if owner or admin
      allow update, delete: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    // Default: only admins can read/write other collections
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}